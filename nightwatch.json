{
    "src_folders" : ["tests"],
    "output_folder" : "reports",
  
    "selenium" : {
      "start_process" : true,
      "server_path" : "./bin/selenium-server-standalone-4.0.0-alpha-2.jar",
      "log_path" : "",
      "port" : 4444,
      "cli_args" : {
        "webdriver.chrome.driver" : "./bin/chromedriver.exe"
      }
    },
  
  "test_settings" : {
    "default" : {
      "desiredCapabilities" : {
        "browserName" : "chrome",
        "chromeOptions": {
          "args" : ["--no-sandbox", "window-size=1920,1080"],
          "w3c": false
        },
        "loggingPrefs": {"driver": "INFO", "server": "OFF", "browser": "INFO"}
      }
    }
  }
}